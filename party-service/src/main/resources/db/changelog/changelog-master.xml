<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="ciprian.bostan@arnia.ro">
        <createSequence sequenceName="legal_forms_id_seq"/>

        <createTable tableName="legal_forms">
            <!--BaseEntity fields-->
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="timestamp with time zone"/>
            <!--BaseEntity fields-->

            <column name="legal_form" type="varchar(300)"/>
            <column name="country" type="varchar(100)"/>
            <column name="document_acronym" type="varchar(300)"/>
            <column name="title" type="varchar(300)"/>
            <column name="english_title" type="varchar(300)"/>
            <column name="eu_country" type="varchar(300)"/>
        </createTable>

        <createSequence sequenceName="address_id_seq"/>

        <createTable tableName="address">
            <!--BaseEntity fields-->
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="timestamp with time zone"/>
            <!--BaseEntity fields-->

            <column name="street" type="varchar(300)"/>
            <column name="number" type="varchar(300)"/>
            <column name="post_code" type="varchar(300)"/>
            <column name="city" type="varchar(300)"/>
            <column name="state" type="varchar(300)"/>
            <column name="country" type="varchar(100)"/>
        </createTable>

        <createSequence sequenceName="party_id_seq"/>

        <createTable tableName="parties">
            <!--BaseEntity fields-->
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="bigint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="timestamp with time zone"/>
            <!--BaseEntity fields-->

            <!--common party fields-->
            <column name="type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
            <column name="external_id" type="varchar(300)"/>
            <column name="country_of_residence" type="varchar(100)"/>
            <column name="address_id" type="bigint">
                <constraints foreignKeyName="address_id_fk"
                             references="address (id)"/>
            </column>
            <column name="secondary_address_id" type="bigint">
                <constraints foreignKeyName="secondary_address_id_fk"
                             references="address (id)"/>
            </column>
            <!--common party fields-->

            <!--Company fields-->
            <column name="company_name" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
            <column name="legal_form_id" type="bigint">
                <constraints foreignKeyName="company_legal_form_id_fk"
                             references="legal_forms (id)"/>
            </column>
            <column name="date_of_incorporation" type="date"/>
            <column name="place_of_incorporation" type="varchar(300)"/>
            <column name="country_of_incorporation" type="varchar(100)"/>
            <column name="chamber_of_commerce_number" type="varchar(200)"/>
            <!--Company fields-->

            <!--Individual fields-->
            <column name="first_name" type="varchar(300)"/>
            <column name="last_name" type="varchar(300)"/>
            <column name="passport_number" type="varchar(100)"/>
            <column name="nationality" type="varchar(100)"/>
            <column name="country_of_passport" type="varchar(100)"/>
            <column name="gender" type="varchar(100)"/>
            <column name="date_of_birth" type="date"/>
            <column name="place_of_birth" type="varchar(100)"/>
            <column name="country_of_birth" type="varchar(100)"/>
            <!--Individual fields-->
        </createTable>

        <sql>
            CREATE UNIQUE INDEX party_passport_number_uindex ON ${database.defaultSchemaName}.parties (passport_number) WHERE type = 'INDIVIDUAL' AND deleted = FALSE;
            CREATE UNIQUE INDEX party_external_id_uindex ON ${database.defaultSchemaName}.parties (external_id) WHERE deleted = FALSE;

            ALTER TABLE ${database.defaultSchemaName}.parties
                ADD CONSTRAINT chamber_of_commerce_number_mandatory_for_company CHECK ((type = 'INDIVIDUAL' AND chamber_of_commerce_number IS NULL) OR
                                                                                       (type = 'COMPANY' AND chamber_of_commerce_number IS NOT NULL)) NOT VALID;

        </sql>

        <rollback>
            <dropTable tableName="parties" cascadeConstraints="true"/>
            <dropSequence sequenceName="party_id_seq"/>
            <dropTable tableName="address" cascadeConstraints="true"/>
            <dropSequence sequenceName="address_id_seq"/>
            <dropTable tableName="legal_forms" cascadeConstraints="true"/>
            <dropSequence sequenceName="legal_forms_id_seq"/>
        </rollback>
    </changeSet>
</databaseChangeLog>